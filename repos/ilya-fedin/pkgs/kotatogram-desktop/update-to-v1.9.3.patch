+		} else {
+			const auto left = data.vexpires().v - base::unixtime::now();
+			_refreshTimer.callOnce(std::max(left, 1) * crl::time(1000));
+		}
+	}, [&](const MTPDauth_loginTokenMigrateTo &data) {
+		importTo(data.vdc_id().v, data.vtoken().v);
