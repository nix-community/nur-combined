+void DatabaseObject::clearState() {
+	_path = QString();
+	_key = {};
+	_map = {};
+	_removing = {};
+	_accessed = {};
+	_stale = {};
+	_time = {};
+	_binlogExcessLength = 0;
+	_totalSize = 0;
+	_minimalEntryTime = 0;
+	_entriesWithMinimalTimeCount = 0;
