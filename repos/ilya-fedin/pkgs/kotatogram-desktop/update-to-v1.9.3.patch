+
+sys.dont_write_bytecode = True
+scriptPath = os.path.dirname(os.path.realpath(__file__))
+sys.path.append(scriptPath + '/../cmake')
+import run_cmake
+
+executePath = os.getcwd()
+def finish(code):
+    global executePath
+    os.chdir(executePath)
