+QString PlaceFromId(PlaceId place) {
+	auto result = QString();
+	result.reserve(15);
+	const auto pushDigit = [&](uint8 digit) {
+		const auto hex = (digit < 0x0A)
+			? char('0' + digit)
+			: char('A' + (digit - 0x0A));
+		result.push_back(hex);
+	};
+	const auto push = [&](uint8 value) {
+		pushDigit(value & 0x0F);
+		pushDigit(value >> 4);
+	};
+	for (auto i = 0; i != place.size(); ++i) {
+		push(place[i]);
+		if (!i) {
+			result.push_back('/');
+		}
+	}
+	return result;
+}
