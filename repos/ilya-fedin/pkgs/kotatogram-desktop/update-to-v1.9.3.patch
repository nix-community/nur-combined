+int main() {
+	while (true) {
+		
+		// Read data length or exit
+		int length;
+		std::cin >> length;
+		if (length == -1)
+			break;
+		
+		// Read data bytes
+		bool isAscii = true;
+		std::vector<uint8_t> data;
+		for (int i = 0; i < length; i++) {
+			int b;
+			std::cin >> b;
+			data.push_back(static_cast<uint8_t>(b));
+			isAscii &= 0 < b && b < 128;
