+void DatabaseObject::startStaleClear() {
+	// Report "Clearing..." status.
+	pushStats();
+	clearStaleChunk();
+}
+
+void DatabaseObject::clearStaleNow(const base::flat_set<Key> &stale) {
+	if (stale.empty()) {
+		return;
+	}
+
+	// Report "Clearing..." status.
+	_stale.push_back(stale.front());
+	pushStats();
+
+	for (const auto &key : stale) {
+		remove(key, nullptr);
+	}
+
+	// Report correct status async.
+	_stale.clear();
+	optimize();
+}
