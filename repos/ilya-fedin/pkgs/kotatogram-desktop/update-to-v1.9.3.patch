+template <typename Record, typename GetElement>
+bool DatabaseObject::processRecordMultiStore(
+		const Record &header,
+		const GetElement &element) {
+	while (const auto entry = element()) {
+		if (!processRecordStore(
+				entry,
+				std::is_class<typename Record::Part>{})) {
+			return false;
+		}
+	}
