#!/usr/bin/env bash

set -euo pipefail

# deploy machines with pyinfra

hosts=""
args=()
parseArgs=0
for item in $@; do
    if [ "$item" == "--" ]; then
        parseArgs=1
    else
        if [ "$parseArgs" == 1 ]; then
            args+=("$item")
        else
            if [ ! -z "$hosts" ]; then
                hosts="$hosts,$item"
            else
                hosts="$item"
            fi
        fi
    fi
done

if [ -z "$hosts" ]; then
    echo "no hosts specified" >&2
    exit 1
fi


sd app pyinfra --use-sudo-password "$hosts" pyinfra/nixos.py pyinfra/home-manager.py "${args[@]}"
