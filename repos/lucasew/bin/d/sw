#!/usr/bin/env bash

set -euo pipefail

# instantaneous nix-shell
#
# sd d sw ...packages -- ...args

packages_part=()
args_part=()

is_args=0
while [ $# -gt 0 ]; do
    if [ "$1" == "--" ]; then
        is_args=1
    else
        if [ "$is_args" == "0" ]; then
            packages_part+=("$1")
        else
            args_part+=("$1")
        fi
    fi
    shift
done

echo packages: ${packages_part[@]}
echo args: ${args_part[@]}

sd d drun nix-shell -p ${packages_part[@]} --command ${args_part[@]}
