#! /usr/bin/env nix-shell
#! nix-shell -I nixpkgs=https://releases.nixos.org/nixpkgs/nixpkgs-25.11pre837798.e7eabdc701d7/nixexprs.tar.xz -i bash -p findutils nixfmt jq moreutils

CHECK_ARG=

case $1 in
    -h)
        echo "$0 [-c]"
        ;;
    -c)
        CHECK_ARG=-c
        ;;
esac

find . -name '*.nix' \
  ! -path ./pkgs/firefox-addons/generated-firefox-addons.nix \
  -exec nixfmt $CHECK_ARG {} +

if [[ -z $CHECK_ARG ]] ; then
  jq 'sort_by(.slug)' < pkgs/firefox-addons/addons.json \
    | sponge pkgs/firefox-addons/addons.json
fi
