desc "macshowhidden"
task "macshowhidden" do
  sh 'defaults write com.apple.finder AppleShowAllFiles TRUE'
  sh 'killall Finder'
end

desc "machidehidden"
task "machidehidden" do
  sh 'defaults write com.apple.finder AppleShowAllFiles FALSE'
  sh 'killall Finder'
end

