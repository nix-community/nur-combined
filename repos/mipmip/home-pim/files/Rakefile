  sh "ls -al ~/.bitbar_gitlab_cnf.yml"
end

desc "aws_lingewoud stel aws cli in voor lingewoud"
task :aws_lingewoud do
  sh "rm -f ~/.aws/credentials && cd ~/.aws && ln -s credentials.lingewoud credentials"
  sh "ls -al ~/.aws"
end

