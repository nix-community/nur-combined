{
  "$schema": "https://docs.renovatebot.com/renovate-global-schema.json",

  // self-hosted
  "onboarding": false,
  "requireConfig": "ignored",
  "platform": "github",
  "repositories": ["spotdemo4/nur"],
  "allowedCommands": ["nix-fix-hash --file utils/images"],

  // repository
  "extends": ["config:recommended"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["* * * * 0"] // sunday
  },
  "nix": {
    "enabled": true
  },
  "customManagers": [
    {
      "customType": "regex",
      "description": "docker images",
      "managerFilePatterns": ["/^images/.*.nix$/"],
      "matchStrings": [
        "image = \"?(?<depName>[^\\s:@\"]+)(?::(?<currentValue>[-a-zA-Z0-9.]+))?(?:@(?<currentDigest>sha256:[a-zA-Z0-9]+))?\"?"
      ],
      "autoReplaceStringTemplate": "image = \"{{{depName}}}:{{{newValue}}}{{#if newDigest}}@{{{newDigest}}}{{/if}}\"",
      "depTypeTemplate": "image",
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "description": "flakes",
      "managerFilePatterns": ["/^packages/.*.nix$/"],
      "matchStrings": [
        "builtins\\.getFlake \"github:(?<depName>.+/.+)/(?<currentDigest>.+)\" # (?<currentValue>.+)"
      ],
      "autoReplaceStringTemplate": "builtins.getFlake \"github:{{{depName}}}/{{{newDigest}}}\" # {{{newValue}}}",
      "depTypeTemplate": "flake",
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchManagers": ["nix"],
      "groupName": "nix inputs"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github actions"
    },
    {
      "matchManagers": ["custom.regex"],
      "matchDepTypes": ["image"],
      "groupName": "docker images",
      "pinDigests": true,
      "postUpgradeTasks": {
        "commands": ["nix-fix-hash --file utils/images"]
      }
    },
    {
      "matchManagers": ["custom.regex"],
      "matchDepTypes": ["flake"],
      "groupName": "flakes",
      "pinDigests": true
    }
  ]
}
