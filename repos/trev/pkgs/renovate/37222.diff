+
+export function getRangeStrategy({
+  currentValue,
+  depName,
+  rangeStrategy,
+}: RangeConfig): RangeStrategy {
+  if (depName === 'nixpkgs') {
+    return rangeStrategy;
+  }
+
+  if (currentValue) {
+    return 'replace';
+  }
+
+  return 'update-lockfile';
