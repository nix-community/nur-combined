+    start_pleroma()
+    File.stream!("migrator/users.txt")
+    |> Enum.each(&handle_line/1)
+  end
+
+  defp handle_line(line) do
+    bio_limit  = Pleroma.Config.get([:instance, :user_bio_length], 5000)
+    name_limit = Pleroma.Config.get([:instance, :user_name_length], 100)
+
+    params =
+      Jason.decode!(line)
+      |> keys_to_atoms
+      |> loop_fields([
+        :inserted_at,
