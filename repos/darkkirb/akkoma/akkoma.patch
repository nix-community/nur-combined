+defmodule Mix.Tasks.Pleroma.Migrator.Import.Users do
+  use Mix.Task
+  import Mix.Pleroma
+  import Mix.Pleroma.Migrator
+  alias Pleroma.User
+  alias Pleroma.Repo
+
+  @shortdoc "Import users."
